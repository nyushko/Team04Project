<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.team04project"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.team04project.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.team04project.Options"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.example.team04project.CreateComment"
            android:label="@string/title_activity_create_comment" >
        </activity>
        <activity
            android:name="com.example.team04project.BrowseComment"
            android:label="@string/title_activity_browse_comment" >
        </activity>
        <activity
            android:name="com.example.team04project.CreateCommentActivity"
            android:label="@string/title_activity_create_comment"
            android:parentActivityName="com.example.team04project.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.team04project.MainActivity" />
        </activity>
        <activity
            android:name="com.example.team04project.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.team04project.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.team04project.MainActivity" />
        </activity>
    </application>

</manifest>
